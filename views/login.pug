extends layout

block content
  h1 Login
  form(method='POST', action='/users/login')
    #form-group
      label Username:
      input.form-control(name='username',type='text')
    #form-group
      label Password:
      input.form-control(name='password',type='password')
    br
    input.btn.btn-primary(type='submit',value='Sign in')
    a.btn.btn-warning(href='/users/forgot',style="margin-left:20px;") Forgot Password
